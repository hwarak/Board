<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.mappers.ReportMapper">

	<insert id="inserReport">
		insert into report(user_idx,board_idx,report_subject,report_title,report_contents) value(#{userIdx},#{boardIdx},#{reportSubject},#{reportTitle},#{reportContents})
	</insert>
	
	<delete id="deleteReport">
		delete from report where report_idx = #{reportIdx}
	</delete>

</mapper>